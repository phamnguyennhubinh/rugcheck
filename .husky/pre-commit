#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo ""
echo "╔═══════════════════════════════════════════════════════════════╗"
echo "║                📝 RUNNING PRE-COMMIT HOOKS                   ║"
echo "╚═══════════════════════════════════════════════════════════════╝"
echo ""

echo "🔍 Running code linting (bun run lint)..."
bun run lint
echo "✅ Linting complete!"
echo ""

echo "💅 Formatting code (bun run format)..."
bun run format
echo "✅ Formatting complete!"
echo ""

echo "╔═══════════════════════════════════════════════════════════════╗"
echo "║              🎉 PRE-COMMIT CHECKS PASSED! 🎉                ║"
echo "╚═══════════════════════════════════════════════════════════════╝"
echo ""
# bun run test